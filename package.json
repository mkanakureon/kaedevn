{
  "name": "kaedevn",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Visual novel engine for creating and previewing interactive stories",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w packages/core && npm run build -w packages/compiler && npm run build -w packages/player",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "demo": "npx tsx examples/console-demo.ts"
  },
  "devDependencies": {
    "tsx": "^4.21.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkanakureon/kaedevn"
  },
  "keywords": [
    "visual-novel",
    "game-engine",
    "pixi",
    "typescript"
  ]
}
